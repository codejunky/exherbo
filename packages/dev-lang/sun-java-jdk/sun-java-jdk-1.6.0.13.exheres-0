SUMMARY="SDK for the Java programming language"
HOMEPAGE="http://java.sun.com"
DOWNLOADS="http://download.java.net/dlj/binaries/jdk-6u13-dlj-linux-i586.bin -> ${PNV}.bin"
LICENCES="SUN"
SLOT="1.6"
PLATFORMS="~x86 ~amd64"
DEPENDENCIES="
	sys-libs/glibc
"
WORK="${WORKBASE}/jdk1.6.0_13"
IMAGE_PATH="${IMAGE}/opt/${PNV}/"
src_unpack() {
    sh ${FETCHEDDIR}/${PNV}.bin --accept-license --unpack
}

src_install() {
    mkdir -p ${IMAGE_PATH}
    cp -vR ${WORK}/* ${IMAGE_PATH}
	keepdir /opt/${PNV}/jre/lib/applet
    keepdir /opt/${PNV}/db/demo/programs/localcal/lib
    hereenvd 90java <<EOF
PATH="/opt/${PNV}/bin"
EOF

}
